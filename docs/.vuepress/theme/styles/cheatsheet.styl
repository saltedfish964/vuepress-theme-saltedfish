.cheatsheet {
  .page {
    background: #f1f3f5;
  }
  .cheatsheet-code {
    box-shadow: 0 6px 8px rgba(85, 102, 119, 0.03), 0 1px 1px rgba(85, 102, 119, 0.4);
    &:not(:first-child) {
      border-top: 0;
    }
    div[class*="language-"] {
      background: #fff;
      pre {
        margin: 0;
        border-radius: 0;
      }
      code {
        color: #476582;
      }
    }
    div[class*="language-"]::before {
      color: #476582;
    }
    div[class*="language-"] .highlight-lines .highlighted {
      background: linear-gradient(to right,rgba(20,175,131,0.05) 25%,transparent);
    }
    & > :not(:first-child) {
      border-radius: 0;
      border-top: solid 1px rgba(85,102,119,.18);
    }
    & > :first-child {
      border-radius: 0;
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
    }

    & > :last-child {
      border-bottom-left-radius: 3px;
      border-bottom-right-radius: 3px;
    }

    p {
      background: #f8f9fa;
      color: #345;
      margin: 0;
      padding: 1rem;
      line-height: 1.6;
      a {
        font-weight: normal;
        color:#345;
        text-decoration: none;
        border-bottom: solid 1px rgba(85,102,119,.18);
        &:hover {
          text-decoration: none;
        }
      }
    }

    & + h2 {
      margin-bottom: 1rem;
    }

    h4 {
      margin: 0;
      padding: 4px 16px;
      font-weight: 400;
      background: #f8f9fa;
      color: #567;
      > .header-anchor {
        display: none;
      }
      code {
        background: none;
        padding: 0;
      }
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 0;
      background: #fff;
      display: table;
      thead {
        display: none;
      }
      tr {
        border-bottom: solid 1px rgba(85,102,119,.18);
        border-top: 0;
        background: #fff;
        &:last-child {
          border-bottom: 0;
        }
      }
      th, td {
        border: 0;
      }
      td {
        padding: 0.5rem 1rem;
        &:first-child {
          white-space: nowrap;
          code {
            background: none;
            color: #35a;
          }
        }
      }
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
  } 

  h2 {
    position: relative;
    color: #745fb5;
    border-bottom: 0;
    overflow: hidden;
    &:after {
      position: absolute;
      top: 85%;
      margin-left: 24px;
      content: '';
      display: inline-block;
      vertical-align: middle;
      width: 100%;
      height: 1px;
      background: linear-gradient(to right,rgba(116,95,181,0.2),transparent 80%);
    }
  }
}

@media (max-width: $MQMobileNarrow) {
  .cheatsheet {
    .theme-saltedfish-content {
      // padding: 1.5rem 0;
    }
    .cheatsheet-code {
      margin: 0 -1.5rem;
      div[class*="language-"] {
        margin: 0;
        border-radius: 0;
      }
      p {
        margin: 0;
        border-radius: 0;
      }
    }
  }
}